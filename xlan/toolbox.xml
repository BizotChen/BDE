<category name="X-LAN積木" colour="#a5745b">
  <category name="Serial">
    <block type="xlan_serial_init"></block>
    <block type="xlan_serial_print"></block>
    <block type="xlan_serial_println"></block>
    <block type="xlan_serial_while_loop"></block>
    <block type="xlan_serial_read_a_char">
      <field name="NAME" id="O_15oKY2H{@~QP*v]mz$">chrBuffer</field>
    </block>
    <block type="xlan_serial_read_an_inline_string">
      <field name="NAME" id="Lv|?p|q-ULreM$wnVN2~">strBuffer</field>
    </block>
  </category>
  <category name="BLE">
    <block type="xlan_ble_serial_init"></block>
    <block type="xlan_ble_serial_while_loop"></block>
    <block type="xlan_ble_serial_read_a_char">
      <field name="NAME" id="O_67oKY4H{@*EP*z]mz$">chrCmd</field>
    </block>
  </category>
  <category name="LINE">
    <block type="xlan_set_line_token"></block>
    <block type="xlan_send_line_msg"></block>
    <block type="xlan_send_line_msg_with_image"></block>
  </category>
  <category name="MMShield">
    <block type="mmshield_init"></block>
    <category name="Motor">
      <block type="mmshield_motor_rotate">
        <field name="channel">1</field>
        <field name="dir">FORWARD</field>
        <field name="pwm">2048</field>
      </block>
      <block type="mmshield_motor_stop">
        <field name="channel">1</field>
      </block>
      <block type="mmshield_servo_write">
        <field name="pwm">375</field>
        <field name="channel">1</field>
      </block>
    </category>
    <category name="OLED">
      <block type="mmshield_oled_init"></block>
      <block type="mmshield_oled_flip"></block>
      <block type="mmshield_oled_set_align">
        <field name="align">TEXT_ALIGN_LEFT</field>
      </block>
      <block type="mmshield_oled_set_fontsize">
        <field name="fontsize">ArialMT_Plain_10</field>
      </block>
      <block type="mmshield_oled_show_msg">
        <field name="x">0</field>
        <field name="y">0</field>
      </block>
      <block type="mmshield_oled_clear"></block>
      <block type="mmshield_oled_mirror"></block>
      <block type="mmshield_oled_reset"></block>
      <block type="mmshield_oled_display">
        <field name="switch">1</field>
      </block>
      <block type="mmshield_oled_brightness">
        <field name="brightness">128</field>
      </block>
      <block type="mmshield_oled_contrast">
        <field name="contrast">128</field>
      </block>
    </category>
  </category>
  <category name="I2S Media">
    <category name="Input">
      <block type="i2s_media_input_device_init">
        <field name="sck">2</field>
        <field name="ws">15</field>
        <field name="sd">14</field>
      </block>
      <block type="i2s_media_input_device_start"></block>
      <block type="i2s_media_input_device_stop"></block>
      <block type="i2s_media_azure_stt">
        <field name="punctuation">false</field>
        <field name="time">5</field>
        <field name="lang">zh-TW</field>
      </block>
      <block type="i2s_media_azure_stt_result"></block>
    </category>
    <category name="Output">
      <block type="i2s_media_output_device_init">
        <field name="lrc">16</field>
        <field name="bclk">12</field>
        <field name="din">13</field>
      </block>
      <block type="i2s_media_play_web_radio">
        <value name="TEXT">
          <block type="i2s_media_web_radio_url"></block>
        </value>
      </block>
      <block type="i2s_media_web_radio_url"></block>
      <block type="i2s_media_loop"></block>
      <block type="i2s_media_google_tts">
        <field name="lang">zh-TW</field>
      </block>
    </category>
  </category>
</category>
