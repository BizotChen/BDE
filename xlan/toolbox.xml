<category name="X-LAN積木" colour="#a5745b">
  <category name="Serial">
    <block type="xlan_serial_init"></block>
    <block type="xlan_serial_print"></block>
    <block type="xlan_serial_println"></block>
  </category>
  <category name="MMShield">
    <block type="mmshield_init"></block>
    <category name="Motor">
      <block type="mmshield_motor_rotate">
        <field name="channel">1</field>
        <field name="dir">FORWARD</field>
        <field name="pwm">2048</field>
      </block>
      <block type="mmshield_motor_stop">
        <field name="channel">1</field>
      </block>
      <block type="mmshield_servo_write">
        <field name="pwm">375</field>
        <field name="channel">1</field>
      </block>
    </category>
    <category name="OLED">
      <block type="mmshield_oled_init"></block>
      <block type="mmshield_oled_flip"></block>
      <block type="mmshield_oled_set_align">
        <field name="align">TEXT_ALIGN_LEFT</field>
      </block>
      <block type="mmshield_oled_set_fontsize">
        <field name="fontsize">ArialMT_Plain_10</field>
      </block>
      <block type="mmshield_oled_show_msg">
        <field name="x">0</field>
        <field name="y">0</field>
      </block>
      <block type="mmshield_oled_clear"></block>
      <block type="mmshield_oled_mirror"></block>
      <block type="mmshield_oled_reset"></block>
      <block type="mmshield_oled_display">
        <field name="switch">1</field>
      </block>
      <block type="mmshield_oled_brightness">
        <field name="brightness">128</field>
      </block>
      <block type="mmshield_oled_contrast">
        <field name="contrast">128</field>
      </block>
    </category>
  </category>
</category>
